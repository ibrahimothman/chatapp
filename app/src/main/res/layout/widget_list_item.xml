<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="1dp"
    android:background="@android:color/white"
    android:id="@+id/list_view_row">



        <TextView
            android:id="@+id/user_name_widget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="كريم ابراهيم "
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="10dp"


            />

        <TextView
            android:id="@+id/user_message_widget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="انت فين يا ابني "
            android:layout_marginLeft="15dp"
            android:textSize="16sp"
            android:layout_below="@+id/user_name_widget"
            />






    <TextView
        android:id="@+id/message_time_widget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:text="05:20 PM"
         />


</RelativeLayout>